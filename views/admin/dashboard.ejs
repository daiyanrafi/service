<% include('../layouts/header.ejs') %>

<h1>Dashboard</h1>




<table width="50%">
    <tr>
        <th>Name</th>
        <th>Email</th>
    <!--  -->
        <!-- <th>Image</th> -->
        <th>Verified</th>

    </tr>

    <% 
if(users.length > 0){
    for(let i=0; i<users.length; i++){
        %>
        <tr>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <!--  -->
            <!-- <td><img src="/userImages<%= users[i].image %>" alt="<%= users[i].image %>" width="50px" height="50px"></td> -->
            <td><%
                
                if(users[i].is_verified == 0){
                    %>
                    <p>Not Verified</p>
                    <%
                }else{
                    %>
                    <p>Verified</p>
                    <%
                }
                
                %></td>
        </tr>
        <%
    }
} else{
    %>
    <tr>
        <td colspan="5">No Users Found</td>
    </tr>
    <%
}
    
    
    %>



</table>
<br>


<html>
    <style>
        table, th, td {
            border:1px solid black;
        }
        </style>

</html>



